@model Application.ViewModels.OrganizationViewModel;

@{
    ViewData["Title"] = "Organizations";
}

<div id="PlaceHolderHere"></div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary">Organizations</h2>
        </div>
        <div class="col-2">
             <a asp-action="Index" class="btn btn-danger btn">Back</a>
        </div>
        <div class="col-2 text-end">
            <a asp-action="CreateView" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add
            </a>
        </div>
    </div>
    <br /><br />
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Name")
                    </th>
                    <th>
                        @Html.DisplayName("Director name")
                    </th>
                    <th>
                        @Html.DisplayName("Address")
                    </th>
                    <th>
                        @Html.DisplayName("Email")
                    </th>
                    <th>
                        @Html.DisplayName("Phone number")
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.DirectorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.PhoneNumber)
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <form>
                                <a class="btn btn-warning mx-2" asp-action="UpdateView" asp-route-id=@Model.Id>
                                    <i class="bi bi-pencil-square"></i>
                                    Modify
                                </a>
                            </form>

                            <form>
                                <a class="btn btn-danger mx-2" asp-action="DeleteView" asp-route-id=@Model.Id>
                                    <i class="bi bi-trash-fill"></i>
                                    Delete
                                </a>
                            </form>
                            <form>
                                <a class="btn btn-warning mx-2" asp-controller="Department" asp-action="GetByOrganizationId" asp-route-id=@Model.Id>
                                    <i class="bi bi-trash-fill"></i>
                                    Departments
                                </a>
                            </form>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>